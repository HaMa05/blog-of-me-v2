---
import HeaderLink from './HeaderLink.astro';
import DropdownMenu from './DropdownMenu';
import ThemeToggle from './ToggleThemeButton';
import { SITE_TITLE } from '../config';

const allPosts = await Astro.glob('../pages/blog/*.md');
const allTags = new Set<string>();
allPosts.map(post => {
	post.frontmatter.tags && post.frontmatter.tags.map((tag: string) => allTags.add(tag))
})
---

<header class="fixed backdrop-blur-md w-full z-20 p-5">
	<nav class="container mx-auto flex items-center justify-between">
		<div class="w-1/4">
			<h1 class="w-fit text-transparent text-xl font-bold bg-clip-text bg-gradient-to-r from-yellow-500 via-pink-500 to-purple-500 dark:bg-gradient-to-r dark:from-purple-500 dark:via-pink-500 dark:to-yellow-500">{SITE_TITLE}</h1>
		</div>
		<div class="flex gap-16">
			<HeaderLink href="/" class="transition:all duration-300 hover:tracking-wider hover:text-orange-400 ">Trang chủ</HeaderLink>
			<HeaderLink href="/blog" class="transition:all duration-300 hover:tracking-wider hover:text-orange-400 ">Bài viết</HeaderLink>
			<HeaderLink href="/about" class="transition:all duration-300 hover:tracking-wider hover:text-orange-400 ">Thông tin cá nhân</HeaderLink>
		</div>
		<div class="flex w-1/4 gap-10 items-center justify-end">
			<div>
				<ThemeToggle client:visible />
			</div>
			<DropdownMenu client:visible tags={Array.from(allTags)} />
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
